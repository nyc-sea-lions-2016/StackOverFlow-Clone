<h1>Register for a New Account</h1>

<% if @errors %>
  <span>Please fix the following errors:</span>
  <ul class="error-list pad-b-2">
    <% @errors.each do |error| %>
      <li class="error-item"><%= error %></li>
    <% end %>
  </ul>
<% end %>
<div class="container">
<form method="post" action="/users">
  <label for="title-input" class="block mar-b-1">Username:</label>
  <input id="title-input" name="user[username]" type="text" tabindex="1" class="block w-100 no-outline no-border pad-1 mar-b-2">

  <label for="title-input" class="block mar-b-1">Email:</label>
  <input id="title-input" name="user[email]" type="text" tabindex="1" class="block w-100 no-outline no-border pad-1 mar-b-2">

  <label for="title-input" class="block mar-b-1">Password:</label>
  <input id="title-input" name="user[password]" type="password" tabindex="1" class="block w-100 no-outline no-border pad-1 mar-b-2">

  <input type="submit" value="Create Account" tabindex="3" class="block button w-100 mar-t-4 mar-b-3 pad-2 round-1 text-c center no-border no-outline">
</form>
</div>