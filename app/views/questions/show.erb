<tbody>
    <tr>
      <th><h1><%= @question.title %></h1></th>
    </tr>
    <tr>
      <td><a href='/votes/<%= @question.id %>' class="fa fa-sort-desc fa-2x vote-button"></a><br>
      <span class='points' ><%= @question.points %></span><br>
      <a href='/votes/reduce/<%= @question.id %>' class="fa fa-caret-down fa-2x vote-button"></a>
      </td>
      <td><%= @question.content %></td>

    </tr>
</tbody>

  <p> <%= @question.content %></p>

  <% if @all_comments %>
  <div id='question_comment'>
    <ul>
      <% @all_comments.reverse.each do |comment| %>
      <li><%= comment.content %></li>
      <% end %>
    </ul>

    <% end %>
    <% if logged_in? %>
      <button data-id="<%= @question.id %>" id="questionId/<%=@question.id%>" class='new_comment_button'>Comment</button>

      <form action="/questions/<%= @question.id %>" method="post">
        <input type="hidden" name="_method" value="delete">
        <input type="submit" value="Delete">
      </form>
    <% end %>
  <h6><%= @answers.count %> Answers</h6><br>


  <ul id="answer">
    <% @answers.each do |answer| %>
    <%= erb :'_new_answer', locals:{answer: answer}, layout: false %>
  </ul>

    <%= erb :'_comments', locals:{question: @question, comment: @comment}, layout: false %>
  </div>
</div>

<!-- Load answers for this questions -->

<div id='answer_container'>
  <h6><%= @answers.count %> Answers</h6><br>
    <ul>
      <% @answers.each do |answer| %>
      <li><%= answer.content %></li>
    </ul>
  <div class='answer_comment'>
    <% if @answers.length > 0 && logged_in? %>
    <button data-id="<%= answer.id %>" class='new_comment_for_answer_button'>Comment</button>
    <% end %>
    <%= erb :'_comments_answer', locals:{answer: answer, comment: @comment}, layout: false %>
  </div>
</div>

<!-- deleting answers -->

<form action="/answers/<%= answer.id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete">
</form>

<% end %>

<form id="new_answer_form" class="hidden" action="/comments" method="POST">
  <input type ='hidden' name='question[question_id]' value="<%=@question.id%>">
  <input type="hidden" name="comment[user_id]" value="<%=session[:user_session_id]%>">
  <textarea rows="5" cols="30" name="comment[content]" placeholder="Comment"></textarea>
  <input type="submit" value="Comment" />
</form>

</div>


<h3> Your Answer </h3><br>

<% if @errors %>
<p><%= @errors %></p>
<% end %>

<form id="user_answer" action="/questions/<%= @question.id %>/answers/new" method="POST">
    <textarea rows="5" cols="30" name="answer[content]" placeholder="Content"></textarea>
    <input type="submit" value="Submit Answer">
</form>









