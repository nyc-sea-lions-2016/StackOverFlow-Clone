<div class='answer_comment_container'>
  <li><%= answer.content %></li><button data-id="<%= answer.id %>" class='new_comment_for_answer_button'>Comment</button>
   <form id="answer-<%=answer.id%>" class="new_comment_for_answer_form hidden" action="/answers/comments" method="POST">
      <input type ='hidden' name='answer[answer_id]' value="<%=answer.id%>">
      <input type="hidden" name="comment[user_id]" value="<%=session[:user_session_id]%>">
        <textarea rows="5" cols="30" name="comment[content]" placeholder="Comment"></textarea>
      <input type="submit" value="Comment">
    </form>

<!-- DELETE BUTTON -->
<form action="/answers/<%= answer.id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete">
</form>

</div>
